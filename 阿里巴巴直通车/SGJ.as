package  {	import com.adobe.serialization.json.JSON;		public class SGJ {		private var urlLoader:URLLoader = new URLLoader();		private var path:String = "/foot/getuserinfo.htm";		private var userData:Object;		private var isBad:Boolean = false;		public function SGJ() {			startMotion();		}				private function startMotion():void		{			urlLoader.addEventListener(Event.COMPLETE, getData);			urlLoader.load(new URLRequest(path));		}				private function getData(event:Event):void		{			urlLoader.removeEventListener(Event.COMPLETE, getData);			userData = JSON.decode(event.target.data);			if(userData.bigChangeDate == ""){				isBad = true;			}else{				isBad = false;			}		}	}	}